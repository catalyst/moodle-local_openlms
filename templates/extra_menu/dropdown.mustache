{{!
    @template local_openlms/extra_menu/dropdown

    Simple dropdown with extra actions.

    Example context (json):
    {
        "title": "Extra actions",
        "items": [
            { "url": "https://moodle.test/something.php", "label": "Something" },
            { "divider": true },
            { "url": "https://moodle.test/else.php", "label": "Else" },
        ],
    }
}}
<div class="btn-group">
    <!-- Set as a link to appease Goutte behat. -->
    <a href="#" class="btn btn-link btn-icon icon-size-3 rounded-circle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="{{title}}">
        <i class="fa fa-ellipsis-v text-dark  py-2" aria-hidden="true"></i>
    </a>
    <div class="dropdown-menu dropdown-menu-right">
        {{#items}}
            {{#divider}}
                <div class="dropdown-divider"></div>
            {{/divider}}
            {{#url}}
                <a class="dropdown-item" href="{{url}}">{{label}}</a>
            {{/url}}
        {{/items}}
    </div>
</div>
